<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutMAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonWarenkorb"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/warenkorb"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButtonGetraenke"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:contentDescription="@string/Getraenke"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/imageButtonGemueseUndObst"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:contentDescription="@string/GemueseUndObst"
        tools:srcCompat="@tools:sample/avatars" />
</LinearLayout>